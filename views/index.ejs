<div class="author">
    <h1 class=author_heading> Hi, I am Gokce</h1>
    <p class="author_body">Computer Engineering Student</p>
</div>

<img src="/img/computer.png" alt="computer image" class="computer" width="981" height="528">

<section class="articles">
    <h2 class="article_heading">Latest Posts</h2>
    <ul class="article-ul">
        <% data.forEach(posts => { %>
            <li>
                <a href="#"> 
                    <span><%= posts.title  %></span>
                    <span class="article-list_date"><%= posts.createdAt.toDateString() %></span>
                </a>
            </li>
            
        <% }) %>
    </ul>

    <% if (nextPage !== null) { %>
        <a href="/?page=<%= nextPage %>" class="pagination">&lt; View Older Posts</a>
    <% } %>
</section>