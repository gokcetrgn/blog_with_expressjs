<div class="author">
    <h1 class="author__heading">

    </h1>
</div>

<section class="articles">
    <ul class="article-ul">
        <% data.forEach(posts => { %>
            <li>
                <a href="/post/<%= posts._id %>"> 
                    <span><%= posts.title  %></span>
                    <span class="article-list_date"><%= posts.createdAt.toDateString() %></span>
                </a>
            </li>
            
        <% }) %>
    </ul>

</section>